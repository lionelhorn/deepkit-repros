{
  "reflection": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "composite": true,
    "rootDir": "src",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}
